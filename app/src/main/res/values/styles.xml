<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="defaultProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/common_progress_bar_size</item>
        <item name="android:layout_height">@dimen/common_progress_bar_size</item>
        <item name="android:indeterminateTint">@color/black</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="item_bold_title">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallSize">
        <item name="android:textSize">@dimen/text_size_small_12</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>